# Production Environment - CRITICAL SYSTEM
# Requires approval for all changes

aws_region = "us-east-1"
project_name = "devops-workshop"

# Network - Production grade with 3 AZs
vpc_cidr = "10.2.0.0/16"
public_subnet_cidrs = ["10.2.1.0/24", "10.2.2.0/24", "10.2.3.0/24"]
private_subnet_cidrs = ["10.2.11.0/24", "10.2.12.0/24", "10.2.13.0/24"]
availability_zones = ["us-east-1a", "us-east-1b", "us-east-1c"]

# Compute - Production instance type
instance_type = "t3.medium"

# Auto Scaling - High availability
asg_min_size = 2
asg_max_size = 10
asg_desired_capacity = 3

# Security - Hardened
enable_ssh_access = false  # SSH disabled in production, use SSM
allowed_ssh_cidrs = []     # No direct SSH access
create_database_sg = false

# Monitoring - Full observability
enable_cloudwatch_alarms = true
enable_sns_alerts = true
alert_email = "devops@example.com"  # Change to your email

# Application
app_port = 3000
node_version = "18"

public_key_path = "~/.ssh/id_rsa.pub"
