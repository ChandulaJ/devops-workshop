# Staging environment - Production-like setup

aws_region = "us-east-1"
project_name = "devops-workshop"

# Network (different CIDR from dev)
vpc_cidr = "10.1.0.0/16"
public_subnet_cidrs = ["10.1.1.0/24", "10.1.2.0/24"]
private_subnet_cidrs = ["10.1.11.0/24", "10.1.12.0/24"]
availability_zones = ["us-east-1a", "us-east-1b"]

# Compute - Higher specs than dev
instance_type = "t3.small"
instance_count = 2

# Auto Scaling (optional, enable for testing)
use_auto_scaling = false
asg_min_size = 2
asg_max_size = 4
asg_desired_capacity = 2

# Features
use_elastic_ip = false
use_load_balancer = false

# Application
app_port = 3000
node_version = "18"

# Security - Restrict SSH in staging!
allowed_ssh_cidrs = ["0.0.0.0/0"]  # Replace with your IP

public_key_path = "~/.ssh/id_rsa.pub"
